        }

        /* Yes/No Buttons */
        .btn-group { display: flex; gap: 10px; margin-bottom: 30px; }
        button {
            flex: 1; padding: 15px; font-size: 18px; border: none; border-radius: 8px; cursor: pointer; font-weight: bold; transition: 0.2s;
        }
        .btn-yes { background-color: #e8f5e9; color: #2e7d32; border: 2px solid #2e7d32; }
