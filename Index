<body>

<div class="container">
    <h2>üë©‚Äçüç≥ Cook Tracker</h2>

    <div class="date-group">
        <label>Select Date</label>
        <input type="date" id="datePicker">
    </div>

    <label style="text-align: center;">Did the Cook come?</label>
    <div class="btn-group">
        <button class="btn-yes" id="btnYes" onclick="markAttendance(true)">YES (Came)</button>
        <button class="btn-no" id="btnNo" onclick="markAttendance(false)">NO</button>
    </div>

    <div class="summary-card">
        <div class="sub-text">Total Bill for <span id="displayMonth">Month</span></div>
        <div class="big-total">‚Çπ<span id="totalCost">0</span></div>
        <div class="sub-text"><span id="daysCount">0</span> days present</div>
    </div>

    <div class="history">
        <h3>Dates Visited (This Month)</h3>
        <ul class="history-list" id="historyList"></ul>
    </div>
</div>

<script>
    const COST_PER_DAY = 100;
    const datePicker = document.getElementById('datePicker');
    const btnYes = document.getElementById('btnYes');
    const btnNo = document.getElementById('btnNo');
    
    // Load data from phone storage
    let data = JSON.parse(localStorage.getItem('cookData')) || {};

    // Set date picker to Today by default
    datePicker.valueAsDate = new Date();

    // When date changes, update buttons to show saved status
    datePicker.addEventListener('change', updateUI);

    function markAttendance(isPresent) {
        const date = datePicker.value;
        
        if (isPresent) {
            data[date] = 'present';
        } else {
            // If No, remove from data so it doesn't count
            delete data[date]; 
        }

        localStorage.setItem('cookData', JSON.stringify(data));
        updateUI();
    }

    function updateUI() {
        const selectedDate = datePicker.value;
        const selectedMonth = selectedDate.substring(0, 7); // Extract "2025-11"
        
        // 1. Update Button Styles for the selected date
        btnYes.className = 'btn-yes';
        btnNo.className = 'btn-no';
        
        if (data[selectedDate] === 'present') {
            btnYes.classList.add('active');
        } else {
            // Default to 'No' active if no data is present
            btnNo.classList.add('active');
        }

        // 2. Calculate Totals for the selected MONTH
        let monthlyCount = 0;
        const historyList = document.getElementById('historyList');
        historyList.innerHTML = ''; // Clear list

        // Get all dates, sort them (newest first)
        const sortedDates = Object.keys(data).sort().reverse();

        sortedDates.forEach(date => {
            // Check if this recorded date belongs to the month currently shown in date picker
            if (date.startsWith(selectedMonth)) {
                monthlyCount++;
                
                // Add to history list
                const li = document.createElement('li');
                li.className = 'history-item';
                li.innerHTML = `<span>${date}</span> <span class="status-present">Visited</span>`;
                historyList.appendChild(li);
            }
        });

        // 3. Update Text
        const monthName = new Date(selectedDate).toLocaleString('default', { month: 'long' });
        document.getElementById('displayMonth').innerText = monthName;
        document.getElementById('daysCount').innerText = monthlyCount;
        document.getElementById('totalCost').innerText = monthlyCount * COST_PER_DAY;
    }

    // Run once on load
    updateUI();
</script>

</body>
